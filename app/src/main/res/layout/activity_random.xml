<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/buttonRandomCocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Random Cocktail"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/cocktailImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="Cocktail Image" />

        <TextView
            android:id="@+id/cocktailNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cocktail Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/cocktailIngredientsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients will be displayed here"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/cocktailInstructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions will be displayed here"
            android:textSize="18sp"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
